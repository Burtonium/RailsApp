<% if logged_in? %>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
    <div class="col-md-2"></div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= link_to image_tag("logo.png", alt: APP_NAME + " logo"),
              root_path %></h1>
  
    <h2>
      Quick, easy, and interactive solutions to your technical problems.
    </h2>
    <% if not logged_in? %>
      <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>  
    
      <h5>or if you already have an account, <%= link_to "log in", login_path %></h5>
    <% end %>
  </div>
<% end %>